<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.dao.SetmealDao">

    <!--新增-->
    <insert id="add">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into t_setmeal
        (code,name,sex,age,helpCode,price,remark,attention,img)
        values
        (#{code},#{name},#{sex},#{age},#{helpCode},#{price},#{remark},#{attention},#{img})
    </insert>


    <!--设置检查组和套餐的关联关系-->
    <update id="setSetmealAndCheckGroup">
        insert into t_setmeal_checkgroup(setmeal_id, checkgroup_id)
        values (#{setmeal_id}, #{checkgroup_id})
    </update>
    <!--更新套餐-->
    <update id="edit">
        update t_setmeal
        <set>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="helpCode != null">
                helpCode = #{helpCode},
            </if>
            <if test="sex != sex">
                sex = #{sex},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="attention != null">
                attention = #{attention},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="img != null">
                img = #{img},
            </if>
        </set>
        where id = #{id}
    </update>
    <update id="setCheckGroupAndsetmeal">
        insert into t_setmeal_checkgroup(setmeal_id, checkgroup_id)
        values (#{setmeal_id}, #{checkgroup_id})
    </update>
    <!--删除关联-->
    <delete id="deleteAssoication">
        delete
        from t_setmeal_checkgroup
        where setmeal_id = #{id}
    </delete>
    <!--根据id删除套餐-->
    <delete id="deleteSetmealById">
        delete
        from t_setmeal
        where id = #{id}
    </delete>
    <!--分页查询-->
    <select id="findByCondition" resultType="com.itheima.pojo.CheckGroup">
        select * from t_setmeal
        <if test="value !=null and value !='' and value.length > 0">
            where code=#{value} or name=#{value} or helpCode=#{value}
        </if>
    </select>
    <!--通过id查询套餐-->
    <select id="findByID" resultType="com.itheima.pojo.Setmeal">
        select *
        from t_setmeal
        where id = #{id}
    </select>

    <select id="findCheckGroupIdsBysetmealId" resultType="int">
        select checkgroup_id
        from t_setmeal_checkgroup
        where setmeal_id = #{id}
    </select>
</mapper>